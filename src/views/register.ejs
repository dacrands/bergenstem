<% include ./partials/header %>
<div class="container-fluid">
    <div class="contact">
        <header>
            <h1 class="display-4">Register</h1>
        </header>
        
        
        <div class="row justify-content-center align-items-center">
            <form action="/register" method="post" class="contact-form col-md-3 col-sm-4">
                <div class="form-group">
                  <label for="username">Username</label>
                  <input type="text" class="form-control" name="username" placeholder="Username">                  
                </div>
                <div class="form-group">
                  <label for="password">Password</label>
                  <input class="form-control"  type="password" name="password" placeholder="Password">
                </div>            
                <button type="submit" class="btn btn-primary">Register</button>
              </form>
              <div class="contact-img col-md-4 col-sm-6">
                  <img src="http://www.bergenstem.org/images/stemlogo2.png"  class="img-fluid" alt="Responsive image" alt="">
              </div>
        </div>
        
    </div>

</div>
<% include partials/footer%>